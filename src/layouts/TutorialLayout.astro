---
import Layout from './Layout.astro';

const { titulo, contenido, description, slug, categoria } = Astro.props;

const pageTitle = `${titulo} | BearStips`;
const canonical = `https://bearstips.com/es/tutorial/${categoria}/${slug}`;
---

<Layout
  title={pageTitle}
  description={description}
  canonical={canonical}
>
  <main>
    <article class="tutorial">
      <h1>{titulo}</h1>
      <div class="contenido-tutorial" set:html={contenido}></div>
    </article>
  </main>
</Layout>

<style is:global>
  body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
  }

  main {
    max-width: 800px;
    margin: 20px auto;
    padding: 0 20px;
  }

  .code-block {
  position: relative;
  background: #1e1e1e;
  color: #f8f8f2;
  padding: 18px;
  padding-top: 45px;
  border-radius: 10px;
  overflow-x: auto;
  font-size: 14px;
  line-height: 1.6;
  margin: 1.2em 0;
  font-family: Consolas, Monaco, monospace;
}
.code-block code {
  background: none;
  padding: 0;
  color: inherit;
  font-size: inherit;
}


  /* ── Botón copiar ── */
  .copy-btn {
    position: absolute;
    top: 10px;
    right: 10px;
    background: #2d2d2d;
    color: #fff;
    border: 1px solid #555;
    padding: 5px 11px;
    font-size: 12px;
    border-radius: 6px;
    cursor: pointer;
    transition: background 0.2s ease, border-color 0.2s ease;
    user-select: none;
  }

  .copy-btn:hover {
    background: #444;
    border-color: #777;
  }

  .copy-btn.copied {
    background: #16a34a;
    border-color: #16a34a;
  }

  /* ── Tipografía general del tutorial ── */
  h1 {
    font-size: 2.5rem;
    margin-bottom: 0.4em;
  }

  .contenido-tutorial h2 {
    font-size: 1.7rem;
    margin-top: 2em;
    margin-bottom: 0.4em;
    color: #111;
  }

  .contenido-tutorial h3 {
    font-size: 1.15rem;
    margin-top: 1.6em;
    color: #222;
  }

  .contenido-tutorial p {
    line-height: 1.7;
    color: #333;
    margin: 0.6em 0 1em;
  }

  .contenido-tutorial a {
    color: #2563eb;
    text-decoration: underline;
  }

  .contenido-tutorial img {
    max-width: 100%;
    border-radius: 8px;
    margin: 1em 0;
  }

  .contenido-tutorial ul,
  .contenido-tutorial ol {
    padding-left: 1.4em;
    line-height: 1.8;
    color: #333;
  }

  /* ── Separador superior ── */
  article.tutorial {
    border-top: 1px solid #ddd;
    padding-top: 24px;
  }
</style>

<script is:inline>
document.addEventListener("DOMContentLoaded", () => {
  document.querySelectorAll('.contenido-tutorial pre').forEach(pre => {
    pre.classList.add('code-block'); // clase global para CSS
    if (pre.querySelector('.copy-btn')) return;

    const btn = document.createElement('button');
    btn.innerText = 'Copiar';
    btn.className = 'copy-btn';

    btn.addEventListener('click', () => {
      const codeEl = pre.querySelector('code');
      const text = codeEl ? codeEl.innerText : pre.innerText;

      navigator.clipboard.writeText(text).then(() => {
        btn.innerText = '¡Copiado!';
        btn.classList.add('copied');
        setTimeout(() => {
          btn.innerText = 'Copiar';
          btn.classList.remove('copied');
        }, 2000);
      });
    });

    pre.appendChild(btn);
  });
});
</script>