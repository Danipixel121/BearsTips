---
import tutoriales from '../content/tutoriales.json';
import Header from '../components/Header.astro';

const destacados = tutoriales.filter(t => t.destacado);
const categorias = [...new Set(tutoriales.map(t => t.categoria))];

const tree = categorias.map(categoria => ({
  categoria,
  tutoriales: tutoriales.filter(t => t.categoria === categoria)
}));
---

<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Inicio - BearsTips</title>
  <link rel="stylesheet" href="/assets/styles.css">
  <link rel="shortcut icon" href="/public/favicon.ico" type="image/x-icon">
</head>
<body>
  <Header />

  <main>

    <!-- üîé Buscador -->
    <section class="buscador">
      <input 
        type="text" 
        id="searchInput" 
        placeholder="Buscar tutorial..."
        oninput="filtrarTutoriales()"
      />
    </section>


    <!-- üìÇ Categor√≠as con tutoriales en columna -->
    <section class="categorias-grid" >
      <h2 class="titulo-seccion">Todos los tutoriales</h2>
      {tree.map((c, i) => (
        <div class="categoria-bloque" id={`categoria-${i}`}>
          <h2 class="categoria-titulo">{c.categoria}</h2>
          <ul class="categoria-lista">
            {c.tutoriales.map(t => (
              <li>
                <a href={`/tutorial/${c.categoria}/${t.slug}`}>
                  {t.titulo}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </section>

  </main>

  <script>
    function filtrarTutoriales() {
      const input = document.getElementById("searchInput") as HTMLInputElement | null;
      if (!input) return;
      const valor = input.value.toLowerCase();
      const items = document.querySelectorAll("#tutorialList li[data-titulo]");
      items.forEach(item => {
        const titulo = item.getAttribute("data-titulo") || "";
        (item as HTMLElement).style.display = titulo.includes(valor) ? "block" : "none";
      });
    }

    function scrollToCategoria(index: number) {
      const target = document.getElementById(`categoria-${index}`);
      if (target) {
        target.scrollIntoView({ behavior: "smooth", block: "start" });
      }

      // Resaltar bot√≥n activo
      document.querySelectorAll(".carrusel-item").forEach(btn => btn.classList.remove("activo"));
      const btn = document.querySelector(`.carrusel-item[data-index="${index}"]`);
      if (btn) btn.classList.add("activo");
    }
  </script>

</body>
</html>

<style>
  body {
    margin: 0;
  }

.buscador {
  display: flex;
  justify-content: center;
  margin-top: 4rem;
  padding-right: 40rem; /* desplazamiento visual hacia la izquierda */
}

.buscador input {
  width: 100%;
  max-width: 400px;
  padding: 10px 16px;
  font-size: 16px;
  border: 2px solid #ddd;
  border-radius: 15px;
  outline: none;
  transition: border-color 0.2s;
  font-family: 'Bebas Neue';
}

.buscador input:focus {
  border-color: #00ff9d;
}

  /* Secci√≥n √°rbol */
  .todos-tutoriales {
    margin: 3rem;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .titulo-seccion {
    font-size: 3.5rem;
    font-family: 'Bebas Neue';
  }

  /* ‚îÄ‚îÄ Carrusel ‚îÄ‚îÄ */
  .carrusel-wrapper {
    width: 100%;
    overflow-x: auto;
    padding: 1.5rem 2rem;
    background: #111;
    scrollbar-width: thin;
    scrollbar-color: #555 transparent;
  }

  .carrusel {
    display: flex;
    gap: 1.5rem;
    width: max-content;
  }

  .carrusel-item {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 2.2rem;
    letter-spacing: 0.05em;
    color: #ccc;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.3rem 0.8rem;
    border-bottom: 3px solid transparent;
    transition: color 0.2s, border-color 0.2s;
    white-space: nowrap;
  }

  .carrusel-item:hover,
  .carrusel-item.activo {
    color: #fff;
    border-bottom-color: #ff6b35;
  }

  /* ‚îÄ‚îÄ Bloques de categor√≠a ‚îÄ‚îÄ */
.categorias-grid {
  display: flex;
  flex-direction: column;
  gap: 3rem;
  padding: 3rem 4rem;
  align-items: center;
  max-width: 700px;   /* o el ancho que prefieras */
  margin: 0 auto;
}
.categoria-bloque {
  scroll-margin-top: 80px;
  width: 100%;          /* ‚Üê a√±ade esto */
}

.titulo-seccion {
  font-size: 3.5rem;
  font-family: 'Bebas Neue';
  width: 100%;          /* ‚Üê y esto */
}

  .categoria-titulo {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 2.5rem;
    border-left: 5px solid #00ff9d;
    padding-left: 0.75rem;
    margin-bottom: 1rem;
  }

  .categoria-lista {
    list-style: none;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .categoria-lista li a {
    text-decoration: none;
    color: #333;
    font-size: 1.05rem;
    padding: 0.4rem 0.6rem;
    border-radius: 4px;
    display: block;
    transition: background 0.15s, color 0.15s;
  }

  .categoria-lista li a:hover {
    background: #f0f0f0;
    color: #000;
  }
</style>