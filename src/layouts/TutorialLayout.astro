---
import Layout from './Layout.astro';

const { titulo, contenido, description, slug, categoria } = Astro.props;

const pageTitle = `${titulo} | BearStips`;
const canonical = `https://bearstips.com/es/tutorial/${categoria}/${slug}`;
---

<Layout
  title={pageTitle}
  description={description}
  canonical={canonical}
>
  <main>
    <article class="tutorial">
      <h1>{titulo}</h1>
      <div class="contenido-tutorial" set:html={contenido}></div>
    </article>
  </main>
</Layout>

<style is:global>
  body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
  }

  main {
    max-width: 800px;
    margin: 20px auto;
    padding: 0 20px;
  }

  /* ── Wrapper que limita altura y hace scroll ── */
  pre {
    position: relative;
    background: #1e1e1e;
    color: #f8f8f2;
    border-radius: 10px;
    margin: 1.2em 0;
    /* Limitar a ~3 líneas de código (cada línea ~1.6 * 14px ≈ 22px) */
    max-height: 140px;
    overflow-y: auto;
    overflow-x: auto;
  }

  /* Scroll personalizado */
  pre::-webkit-scrollbar {
    width: 6px;
    height: 6px;
  }
  pre::-webkit-scrollbar-track {
    background: #2d2d2d;
    border-radius: 0 10px 10px 0;
  }
  pre::-webkit-scrollbar-thumb {
    background: #555;
    border-radius: 3px;
  }
  pre::-webkit-scrollbar-thumb:hover {
    background: #777;
  }

  pre code {
    display: block;
    font-family: Consolas, Monaco, monospace;
    font-size: 14px;
    line-height: 1.6;
    padding: 18px;
    /* Espacio arriba para que el botón no tape la primera línea */
    padding-top: 14px;
    background: none;
    color: inherit;
  }

  /* ── Código inline ── */
  :not(pre) > code {
    font-family: Consolas, Monaco, monospace;
    background: #f0f0f0;
    color: #c7254e;
    padding: 2px 6px;
    border-radius: 4px;
    font-size: 0.9em;
  }

  /* ── Botón copiar: sticky dentro del pre ── */
  .copy-btn {
    /* sticky dentro del contenedor pre con overflow */
    position: sticky;
    top: 8px;
    /* Flotarlo a la derecha */
    float: right;
    /* Sacarlo del flujo para que no empuje el código */
    margin-left: 8px;
    margin-right: 8px;
    margin-top: 8px;

    background: #2d2d2d;
    color: #fff;
    border: 1px solid #555;
    padding: 5px 11px;
    font-size: 12px;
    border-radius: 6px;
    cursor: pointer;
    transition: background 0.2s ease, border-color 0.2s ease;
    user-select: none;
    /* Asegurar que quede por encima del código */
    z-index: 1;
  }

  .copy-btn:hover {
    background: #444;
    border-color: #777;
  }

  .copy-btn.copied {
    background: #16a34a;
    border-color: #16a34a;
  }

  /* ── Tipografía general del tutorial ── */
  h1 {
    font-size: 2.2rem;
    margin-bottom: 0.4em;
  }

  .contenido-tutorial h2 {
    font-size: 1.4rem;
    margin-top: 2em;
    margin-bottom: 0.4em;
    color: #111;
  }

  .contenido-tutorial h3 {
    font-size: 1.15rem;
    margin-top: 1.6em;
    color: #222;
  }

  .contenido-tutorial p {
    line-height: 1.7;
    color: #333;
    margin: 0.6em 0 1em;
  }

  .contenido-tutorial a {
    color: #2563eb;
    text-decoration: underline;
  }

  .contenido-tutorial img {
    max-width: 100%;
    border-radius: 8px;
    margin: 1em 0;
  }

  .contenido-tutorial ul,
  .contenido-tutorial ol {
    padding-left: 1.4em;
    line-height: 1.8;
    color: #333;
  }

  /* ── Separador superior ── */
  article.tutorial {
    border-top: 1px solid #ddd;
    padding-top: 24px;
  }
</style>

<script is:inline>
  document.addEventListener("DOMContentLoaded", function () {
    document.querySelectorAll('.contenido-tutorial pre').forEach(function (pre) {
      if (pre.querySelector('.copy-btn')) return;

      const btn = document.createElement('button');
      btn.innerText = 'Copiar';
      btn.className = 'copy-btn';

      btn.addEventListener('click', function () {
        const codeEl = pre.querySelector('code');
        const text = codeEl ? codeEl.innerText : pre.innerText;

        navigator.clipboard.writeText(text).then(function () {
          btn.innerText = '¡Copiado!';
          btn.classList.add('copied');
          setTimeout(function () {
            btn.innerText = 'Copiar';
            btn.classList.remove('copied');
          }, 2000);
        }).catch(function () {
          const ta = document.createElement('textarea');
          ta.value = text;
          ta.style.position = 'fixed';
          ta.style.opacity = '0';
          document.body.appendChild(ta);
          ta.select();
          document.execCommand('copy');
          document.body.removeChild(ta);
          btn.innerText = '¡Copiado!';
          btn.classList.add('copied');
          setTimeout(function () {
            btn.innerText = 'Copiar';
            btn.classList.remove('copied');
          }, 2000);
        });
      });

      // El botón va ANTES del code para que el float:right funcione bien
      pre.insertBefore(btn, pre.firstChild);
    });
  });
</script>