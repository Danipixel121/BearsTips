---
import { supabase } from '../../../lib/supabase.ts';
import Header from '../../../components/Header.astro';


const { categoria } = Astro.params;

const { data: tutorialesData } = await supabase
  .from('tutoriales')
  .select(`*, traducciones:tutoriales_traducciones(*)`)
  .eq('categoria', categoria);

const tutorialesFiltrados = (tutorialesData || []).map(t => ({
  ...t,
  titulo: t.traducciones.find(tr => tr.idioma === 'es')?.titulo || '',
  logo: t.logo_url
}));
---

<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>{categoria.toUpperCase()} - BearsTips</title>
  <link rel="stylesheet" href="/assets/styles.css">
  <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <Header />

  <main>

    <section class="buscador">
      <div class="buscador-inner">
        <svg class="search-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/>
        </svg>
        <input 
          type="text" 
          id="searchInput" 
          placeholder="Buscar tutorial..."
        />
      </div>
    </section>

    <section class="categorias-grid">
      <h2 class="titulo-seccion">{categoria.toUpperCase()}</h2>

      <div class="categoria-bloque">
        <ul class="tutoriales-cards">
          {tutorialesFiltrados.map(t => (
            <li data-titulo={t.titulo.toLowerCase()}>
              <a href={`/es/tutorial/${t.categoria.toLowerCase()}/${t.slug}`} class="tutorial-card">
                <div class="card-img-wrap">
                  <img src={t.logo} alt={t.titulo} loading="lazy" />
                </div>
                <span class="card-titulo">{t.titulo}</span>
              </a>
            </li>
          ))}
        </ul>
      </div>
    </section>

  </main>

  <script>
    function normalizar(texto: string): string {
      return texto
        .toLowerCase()
        .normalize("NFD")
        .replace(/[\u0300-\u036f]/g, "")
        .replace(/\s+/g, " ")
        .trim();
    }

    const input = document.getElementById("searchInput") as HTMLInputElement | null;

    input?.addEventListener("input", () => {
      const valor = normalizar(input.value);

      document.querySelectorAll<HTMLElement>("li[data-titulo]").forEach(item => {
        const titulo = normalizar(item.getAttribute("data-titulo") || "");
        const mostrar = valor === "" || titulo.includes(valor);
        item.style.display = mostrar ? "block" : "none";
      });
    });
  </script>

</body>
</html>

<style>
  body { margin: 0; }

  /* ── Buscador ── */
  .buscador {
    display: flex;
    justify-content: flex-start;
    max-width: 900px;
    margin: 4rem auto 0;
    padding: 0 4rem;
  }

  .buscador-inner {
    position: relative;
    width: 100%;
    max-width: 400px;
  }

  .search-icon {
    position: absolute;
    left: 14px;
    top: 50%;
    transform: translateY(-50%);
    color: #aaa;
    pointer-events: none;
    transition: color 0.2s;
  }

  .buscador input {
    width: 100%;
    padding: 10px 16px 10px 42px;
    font-size: 16px;
    border: 2px solid #ddd;
    border-radius: 15px;
    outline: none;
    transition: border-color 0.2s;
    font-family: 'Bebas Neue';
    box-sizing: border-box;
  }

  .buscador input:focus { border-color: #00ff9d; }

  .buscador-inner:focus-within .search-icon { color: #00ff9d; }

  /* ── Contenedor principal ── */
  .categorias-grid {
    display: flex;
    flex-direction: column;
    gap: 3rem;
    padding: 3rem 4rem;
    align-items: center;
    max-width: 900px;
    margin: 0 auto;
  }

  .titulo-seccion {
    font-size: 3.5rem;
    font-family: 'Bebas Neue';
    width: 100%;
  }

  .categoria-bloque { width: 100%; }

  /* ── Grid de tarjetas ── */
  .tutoriales-cards {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
    gap: 1rem;
  }

  .tutoriales-cards li { display: block; }


  .tutorial-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    text-decoration: none;
    background: #f7f7f7;
    border: 2px solid transparent;
    border-radius: 12px;
    padding: 1rem 0.75rem 0.85rem;
    gap: 0.6rem;
    aspect-ratio: 1 / 1;
    transition: border-color 0.2s, background 0.2s, transform 0.15s, box-shadow 0.2s;
    overflow: hidden;
    cursor: pointer;
  }

  .tutorial-card:hover {
    border-color: #00ff9d;
    background: #fff;
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(0, 255, 157, 0.15);
  }

  .card-img-wrap {
    width: 60%;
    aspect-ratio: 1 / 1;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .card-img-wrap img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .card-titulo {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 1.25rem;
    color: #222;
    text-align: center;
    line-height: 1.2;
    word-break: break-word;
    hyphens: auto;
  }

  .tutorial-card:hover .card-titulo { color: #000; }

  /* ════════════════════════════════
     MOBILE — único bloque limpio
  ════════════════════════════════ */
  @media (max-width: 640px) {

    /* Buscador */
    .buscador {
      margin: 1.75rem auto 0;
      padding: 0 1.25rem;
      justify-content: center;
    }

    .buscador-inner {
      max-width: 100%;
    }

    .buscador input {
      font-size: 17px;
      padding: 13px 16px 13px 44px;
      border-radius: 50px;
      border-width: 2px;
    }

    .search-icon {
      left: 16px;
      width: 17px;
      height: 17px;
    }

    /* Grid principal */
    .categorias-grid {
      padding: 2rem 1.25rem 3rem;
      gap: 2rem;
      align-items: stretch;
    }

    /* Título de página */
    .titulo-seccion {
      font-size: 2.8rem;
      text-align: left;
      margin: 0;
    }

    /* Bloque */
    .categoria-bloque {
      width: 100%;
    }

    /* Tarjetas: 3 columnas */
    .tutoriales-cards {
      grid-template-columns: repeat(3, 1fr);
      gap: 0.75rem;
    }

    .tutorial-card {
      padding: 0.9rem 0.5rem 0.75rem;
      border-radius: 14px;
      gap: 0.5rem;
      -webkit-tap-highlight-color: transparent;
    }

    .tutorial-card:active {
      border-color: #00ff9d;
      background: #fff;
      transform: scale(0.96);
      box-shadow: 0 4px 14px rgba(0, 255, 157, 0.2);
    }

    .card-img-wrap {
      width: 58%;
    }

    .card-titulo {
      font-size: 0.78rem;
      line-height: 1.15;
    }
  }

  /* Pantallas muy pequeñas (≤360px): 2 columnas */
  @media (max-width: 360px) {

    .categorias-grid {
      padding: 1.5rem 1rem 2.5rem;
    }

    .titulo-seccion {
      font-size: 2.4rem;
    }

    .tutoriales-cards {
      grid-template-columns: repeat(2, 1fr);
      gap: 0.65rem;
    }

    .tutorial-card {
      padding: 1rem 0.6rem 0.85rem;
      border-radius: 12px;
    }

    .card-img-wrap {
      width: 56%;
    }

    .card-titulo {
      font-size: 0.85rem;
    }
  }
</style>